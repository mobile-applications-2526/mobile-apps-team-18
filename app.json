{
  "expo": {
    "name": "KotConnect",
    "slug": "KotConnect",
    "scheme": "kotconnect",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "icon": "./assets/splash-icon2.png",
    "splash": {
      "image": "./assets/splash-icon2.png",
      "resizeMode": "contain",
      "backgroundColor": "#111827"
    },
    "ios": {
      "supportsTablet": true,
      "backgroundColor": "#111827"
    },
    "android": {
      "edgeToEdgeEnabled": true,
      "adaptiveIcon": {
        "foregroundImage": "./assets/splash-icon2.png",
        "backgroundColor": "#111827"
      }
    },
    "web": {
      "bundler": "metro",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/splash-icon2.png",
          "imageWidth": 200
        }
      ]
    ]
  }
}
